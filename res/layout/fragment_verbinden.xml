<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Text_Bluetooth_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Bluetooth Status: unbekannt..."
        android:textSize="18dp" />

    <ListView
        android:id="@+id/List_Bluetooth"
        android:layout_width="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_height="250dp"
        android:layout_marginTop="70dp"/>

    <Button
        android:id="@+id/Button_Scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/List_Bluetooth"
        android:layout_marginTop="60dp"
        android:text="Scannen"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/Text_Battery_Level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Button_Scan"
        android:layout_marginTop="30dp"
        android:text="Akku: unbekannt"/>



</RelativeLayout>